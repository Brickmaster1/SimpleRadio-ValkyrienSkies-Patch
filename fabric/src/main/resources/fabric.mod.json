{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${description}",
    "authors": [
        "${mod_author}"
    ],
    "contact": {
        "homepage": "https://fabricmc.net/",
        "sources": "https://github.com/FabricMC/fabric-example-mod"
    },
    "license": "${license}",
    "icon": "assets/${mod_id}/${mod_id}.png",
    "environment": "*",
    "entrypoints": {
        "fabric-datagen": [
            "com.codinglitch.simpleradio.datagen.SimpleRadioDataGenerator"
        ],
        "main": [
            "com.codinglitch.simpleradio.SimpleRadio"
        ],
        "client": [
            "com.codinglitch.simpleradio.client.SimpleRadioClient"
        ],
        "voicechat": [
            "com.codinglitch.simpleradio.RadioPlugin"
        ],
        "lexiconfig": [
            "com.codinglitch.simpleradio.SimpleRadioLibrary"
        ]
    },
    "mixins": [
        "${mod_id}.mixins.json",
        "${mod_id}.fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.14",
        "fabric-api": "*",
        "minecraft": "${fabric_minecraft_version_range}",
        "java": ">=17",
        "voicechat": ">=${minecraft_version}-${voicechat_version}",
        "lexiconfig": ">=${lexiconfig_version}"
    },
    "suggests": {
        "another-mod": "*"
    },
    "accessWidener" : "simpleradio.accesswidener"
}
  